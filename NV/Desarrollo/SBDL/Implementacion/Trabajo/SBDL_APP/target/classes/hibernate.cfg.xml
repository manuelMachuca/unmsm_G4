<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="current_session_context_class">thread</property> 
		<property name="hibernate.enable_lazy_load_no_trans">true</property>
		<!-- <property name="">true</property> -->
		<property name="show_sql">true</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/bdchapatuprofe</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>
		<mapping resource="dao/entidad/Alumno.hbm.xml" />
		<mapping resource="dao/entidad/NivelEstudio.hbm.xml" />
		<mapping resource="dao/entidad/Usuario.hbm.xml" />
		<mapping resource="dao/entidad/Comentario.hbm.xml" />
		<mapping resource="dao/entidad/Informaciondetalle.hbm.xml" />
		<mapping resource="dao/entidad/CursoFavorito.hbm.xml" />
		<mapping resource="dao/entidad/Ubigeo.hbm.xml" />
		<mapping resource="dao/entidad/Nivel.hbm.xml" />
		<mapping resource="dao/entidad/Categoria.hbm.xml" />
		<mapping resource="dao/entidad/Persona.hbm.xml" />
		<mapping resource="dao/entidad/Perfil.hbm.xml" />
		<mapping resource="dao/entidad/Docente.hbm.xml" />
		<mapping resource="dao/entidad/Curso.hbm.xml" />
		<mapping resource="dao/entidad/CursoXDocente.hbm.xml" />
		<mapping resource="dao/entidad/ValorCursoXDocente.hbm.xml" />
	</session-factory>
</hibernate-configuration>

